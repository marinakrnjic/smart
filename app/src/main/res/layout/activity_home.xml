<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C4877"
    tools:context=".Home">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="323dp"
        android:layout_height="119dp"
        android:contentDescription="parkingsilueta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otvoriRegistraciju"
        app:layout_constraintVertical_bias="0.59"
        app:srcCompat="@drawable/auti" />

    <Button
        android:id="@+id/otvoriRegistraciju"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:text="OTVORI PARKING MJESTA"
        android:textColor="#0C4877"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.3"/>


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="263dp"
        android:layout_height="112dp"
        android:contentDescription="smartparking"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/smartlogo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="173dp"
        android:layout_height="50dp"
        android:contentDescription="sum"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071"
        app:srcCompat="@drawable/sumbijeli" />

    <ImageView
        android:id="@+id/infoimg"
        android:layout_width="103dp"
        android:layout_height="44dp"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05"
        app:srcCompat="@drawable/info1" />


</androidx.constraintlayout.widget.ConstraintLayout>